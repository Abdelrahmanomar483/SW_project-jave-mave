#!/usr/bin/env groovy
def gv

pipeline {
    agent any
    tools {
        maven 'MAVEN-version'
    }
    stages {
        stage("init") {
            steps {
                echo "building the application..."
                sh 'mvn package'
            }
        }
        stage("build jar") {
            steps {
                script {
                    gv.buildJar()
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    gv.buildImage()
                }
            }
        }
        stage("removing image from local repo") {
            steps {
                script {
                    gv.removeImage()
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    gv.deployApp()
                }
            }
        }
    }
}
